            var company_name = button.data('company_name')
            var id_number = button.data('id_number')
            var city = button.data('city')
            var age = button.data('age')
            var id_type = button.data('id_type')
            var home_address = button.data('home_address')
            var status = button.data('status')
            var gender = button.data('gender')
              
            var modal = $(this)
            modal.find('.modal-body #id').val(id);
            modal.find('.modal-body #first_name').val(first_name);
            modal.find('.modal-body #last_name').val(last_name);
            modal.find('.modal-body #other_name').val(other_name);
            modal.find('.modal-body #mobile_number').val(mobile_number);
            modal.find('.modal-body #email_address').val(email_address);
            modal.find('.modal-body #company_name').val(company_name);
            modal.find('.modal-body #id_number').val(id_number);
            modal.find('.modal-body #city').val(city);
            modal.find('.modal-body #age').val(age);
            modal.find('.modal-body #id_type').val(id_type);
            modal.find('.modal-body #home_address').val(home_address);
            modal.find('.modal-body #status').val(status);
            modal.find('.modal-body #gender').val(gender);
           
    });
    $('#edit_sme').on('show.bs.modal', function (event){
            var button = $(event.relatedTarget)
            var id = button.data('id')
            var first_name = button.data('first_name')
            var last_name = button.data('last_name')
            var other_name = button.data('other_name')
            var mobile_number = button.data('mobile_number')
            var email_address = button.data('email_address')
            var company_name = button.data('company_name')
            var id_number = button.data('id_number')
            var city = button.data('city')
            var age = button.data('age')
            var id_type = button.data('id_type')
            var home_address = button.data('home_address')
            var status = button.data('status')
            var gender = button.data('gender')
              
            var modal = $(this)
            modal.find('.modal-body #id').val(id);
            modal.find('.modal-body #first_name').val(first_name);
            modal.find('.modal-body #last_name').val(last_name);
            modal.find('.modal-body #mobile_number').val(mobile_number);
            modal.find('.modal-body #email_address').val(email_address);
            modal.find('.modal-body #company_name').val(company_name);
            modal.find('.modal-body #other_name').val(other_name);
            modal.find('.modal-body #id_number').val(id_number);
            modal.find('.modal-body #city').val(city);
            modal.find('.modal-body #age').val(age);
            modal.find('.modal-body #id_type').val(id_type);
            modal.find('.modal-body #home_address').val(home_address);
            modal.find('.modal-body #status').val(status);
            modal.find('.modal-body #gender').val(gender);
           
    });
});
</script>