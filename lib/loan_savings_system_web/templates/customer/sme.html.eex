<ol class="breadcrumb page-breadcrumb">
      <li class="breadcrumb-item">
          <i class="subheader-icon fal fa-chart-area"></i> Loans & Savings
      </li>
      <li class="position-absolute pos-top pos-right d-none d-sm-block"><span class="js-get-date"></span></li>
  </ol>

  <div class="subheader">
    <h1 class="subheader-title">
        <i class="subheader-icon fal fa-window"></i> SME's
    </h1>

    <div class="element-box-content">
      <a href="<%= Routes.user_path(@conn, :dashboard)%>" class="btn btn-secondary btn-sm waves-effect waves-themed" type="button"> Back</a>
      <%= if @user.user_role == "BACKOFFICE_INITIATOR" do %> 
        <button class="btn btn btn-sm waves-effect waves-themed" style="background-color: #011941; color: red;" type="button" data-target="#create_sme" data-toggle="modal"> Add SME</button>
      <% end %>
    </div>
  </div>    

  <div class="row">
    <div class="col-xl-12">
      <div id="panel-1" class="panel">
        <div class="panel-container show">
            <div class="panel-container show">
              <div class="panel-content">
                <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                <input type="hidden" id="csrf" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                  <thead class="p-3 bg-success-900 rounded overflow-hidden position-relative text-white mb-g">
                    <tr>
                      <th>Name</th>
                      <th>Other Name</th>
                      <th>Company Name</th>
                      <th>Phone Number</th>
                      <th>Email</th>
                      <th>ID Number</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                   <%= for sme <- @smes do %>
                    <tr>
                      <td><%= sme.first_name %> <%= sme.last_name %></td>
                      <td><%= sme.other_name %></td>
                      <td><%= sme.company_name %></td>
                      <td><%= sme.mobile_number %></td>  
                      <td><%= sme.email_address  %></td>
                      <td><%= sme.id_number %></td>
                      <td><%= sme.status %></td>          
                      <td>
                          <%= if @user.user_role == "BACKOFFICE_INITIATOR" do %>
                          <div class="input-group">
                              <div class="input-group-prepend">
                                  <span data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class='subheader-icon fal fa-chevron-down'></i> </span>
                                  <div class="dropdown-menu">
                                      <a class="dropdown-item" href="#"  data-id="<%= sme.id %>" data-company_name="<%= sme.company_name %>" data-gender="<%= sme.gender %>" data-email_address="<%= sme.email_address %>" data-mobile_number="<%= sme.mobile_number %>" data-status="<%= sme.status %>" data-id_number="<%= sme.id_number %>" data-id_type="<%= sme.id_type %>" data-first_name="<%= sme.first_name %>" data-last_name="<%= sme.last_name %>" data-other_name="<%= sme.other_name %>" data-home_address="<%= sme.home_address %>" data-age="<%= sme.age %>" data-city="<%= sme.city %>" data-toggle="modal" data-target="#view_sme"><i class="fal fa-eye"></i> View</a>
                                      <a class="dropdown-item" href="#"  data-id="<%= sme.id %>" data-company_name="<%= sme.company_name %>" data-gender="<%= sme.gender %>" data-email_address="<%= sme.email_address %>" data-mobile_number="<%= sme.mobile_number %>" data-status="<%= sme.status %>" data-id_number="<%= sme.id_number %>" data-id_type="<%= sme.id_type %>" data-first_name="<%= sme.first_name %>" data-last_name="<%= sme.last_name %>" data-other_name="<%= sme.other_name %>" data-home_address="<%= sme.home_address %>" data-age="<%= sme.age %>" data-city="<%= sme.city %>" data-toggle="modal" data-target="#edit_sme"><i class="fal fa-edit"></i> Edit</a>
                                    
                                      <%= if sme.status == "ACTIVE" do %>
                                        <a class="dropdown-item" href="#"><i class="fal fa-times"></i> Disable</a>
                                      <% end %>
                                  </div>
                              </div>
                          </div>
                          <% end %>
                          <%= if @user.user_role == "BACKOFFICE_APPROVER" do %>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class='subheader-icon fal fa-chevron-down'></i> </span>
                                    <div class="dropdown-menu">
                                      <a class="dropdown-item" href="#"  data-id="<%= sme.id %>" data-company_name="<%= sme.company_name %>" data-gender="<%= sme.gender %>" data-email_address="<%= sme.email_address %>" data-mobile_number="<%= sme.mobile_number %>" data-status="<%= sme.status %>" data-id_number="<%= sme.id_number %>" data-id_type="<%= sme.id_type %>" data-first_name="<%= sme.first_name %>" data-last_name="<%= sme.last_name %>" data-other_name="<%= sme.other_name %>" data-home_address="<%= sme.home_address %>" data-age="<%= sme.age %>" data-city="<%= sme.city %>" data-toggle="modal" data-target="#view_sme"><i class="fal fa-eye"></i> View</a>
                                      <%= if sme.status == "PENDING_ACTIVATION" do %>
                                        <a class="dropdown-item js-sweetalert2-approve_sme" href="#" style="color: #008000" data-id="<%= sme.id %>"><i class="fal fa-check"></i> Approve</a>
                                      <% else %>
                                        <a class="dropdown-item reject_staff" href="#" style="color: #ff0000" data-id="<%= sme.id %>"><i class="fal fa-times"></i> Reject</a>
                                      <% end %>
                                    </div>
                                </div>
                            </div>
                          <% end %>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%# --------------- Add SME %>
<div class="modal fade" id="create_sme" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title">Add SME</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
              <form action="<%= Routes.customer_path(@conn, :add_sme)%>" method="post">
