                    <input type="hidden" name="status" value="PENDING_ACTIVATION">
                    <input type="hidden" name="off_taker_id" value="2">
                      <div class="row">
                          <div class="col-sm-6 form-group">
                            <div class="form-group">
                                <label for="example-input-small" class="form-label">Name</label>
                                <input type="text" id="offtaker_name" name="offtaker_name" class="form-control form-control-sm" disabled>
