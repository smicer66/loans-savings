                <input type="hidden" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                <!--<input type="hidden" name="is_employee" value="Yes">
                <input type="hidden" name="status" value="PENDING_ACTIVATION">
                <input type="hidden" name="product_id" value="1">-->
                  <div class="row">
                      <div class="col-sm-6 form-group">
                        <div class="form-group">
                            <label for="example-input-small" class="form-label">Company Name<span style="color: red;">*</span></label>
                            <input type="text" id="example-input-small" name="company_name" class="form-control form-control-sm">
                        </div>
                      </div>
                      <div class="col-sm-6 form-group">
                        <div class="form-group">
                            <label for="example-input-small" class="form-label">Company Phone<span style="color: red;">*</span></label>
                            <input type="text" id="example-input-small" name="phone" class="form-control form-control-sm">
                        </div>
                      </div>
                      <div class="col-sm-6 form-group">
                        <div class="form-group">
                            <label for="example-input-small" class="form-label">PACRA Registration Number</label>
                            <input type="text" id="example-input-small" name="company_reg_no" class="form-control form-control-sm">
                        </div>
                      </div>
                      <div class="col-sm-6 form-group">
                        <div class="form-group">
                            <label for="example-input-small" class="form-label">TPIN</label>
                            <input type="text" id="example-input-small" name="tpin_no" class="form-control form-control-sm">
                        </div>
                      </div>
                      <div class="col-sm-6 form-group">
                        <div class="form-group">
                            <label for="example-input-small" class="form-label">Company Email</label>
                            <input type="text" id="example-input-small" name="email" class="form-control form-control-sm">
                        </div>
                      </div>
                  </div>
                </div>
                    <div class="modal-footer">
                      <button class="btn btn-success" type="submit"> Create</button>
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
              </form>
        </div>
    </div>
</div>

