
  <ol class="breadcrumb page-breadcrumb">
      <li class="breadcrumb-item">
          <i class="subheader-icon fal fa-chart-area"></i> Loans & Savings
      </li>
      <li class="position-absolute pos-top pos-right d-none d-sm-block"><span class="js-get-date"></span></li>
  </ol>

  <div class="subheader">
    <h1 class="subheader-title">
        <i class="subheader-icon fal fa-window"></i> Employer
    </h1>

    <div class="element-box-content">
      <a href="<%= Routes.user_path(@conn, :dashboard)%>" class="btn btn-secondary btn-sm waves-effect waves-themed" type="button"> Back</a>
      
        <button class="btn btn btn-sm waves-effect waves-themed" style="background-color: #011941; color: red;" type="button" data-target="#add_employer" data-toggle="modal"> Add Employer</button>
    \
    </div>
  </div>    

  <div class="row">
    <div class="col-xl-12">
      <div id="panel-1" class="panel">
        <div class="panel-container show">
            <div class="panel-container show">
              <div class="panel-content">
                <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                  <input type="hidden" id="csrf" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                  <thead class="p-3 bg-success-900 rounded overflow-hidden position-relative text-white mb-g">
                    <tr>
                      <th>Company Name</th>
                      <th>Company Phone</th>
                      <th>Company Email</th>
                      <th>PACRA Registration Number</th>
                      <th>TPIN</th>
                      <th>Is Employer</th>
                      <th>Is SME</th>
                      <th>Is Off-Taker</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  <%= for employer <- @employers do %>
                        <tr>
                        <td><%= employer.companyName %></td>
                        <td><%= employer.contactPhone %></td>
                        <td><%= employer.contactEmail %></td>
                        <td><%= employer.registrationNumber %></td>
                        <td><%= employer.taxNo %></td>
                        <%= if(employer.isEmployer==true) do %>
                            <td>Yes</td>
                        <% else %>
                            <td>No</td>
                        <% end %>

                        <%= if(employer.isSme==true) do %>
                            <td>Yes</td>
                        <% else %>
                            <td>No</td>
                        <% end %>

                        <%= if(employer.isOffTaker==true) do %>
                            <td>Yes</td>
                        <% else %>
                            <td>No</td>
                        <% end %>
                        <td>
                              <div class="input-group">
                                  <div class="input-group-prepend">
                                      <span data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class='subheader-icon fal fa-chevron-down'></i> </span>
                                      <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#"  data-id="<%= employer.registrationNumber %>" data-company_name="<%= employer.companyName %>" data-phone="<%= employer.contactPhone %>" data-email="<%= employer.contactEmail %>" data-company_reg_no="<%= employer.registrationNumber %>" data-isEmployer ="<%= employer.isEmployer %>" data-isSme="<%= employer.isSme %>" data-isOffTaker="<%= employer.isOffTaker %>" data-toggle="modal" data-target="#view_employer"><i class="fal fa-eye"></i> View Employer</a>
                                        <a class="dropdown-item" href="#"  data-id="<%= employer.registrationNumber %>" data-company_name="<%= employer.companyName %>" data-phone="<%= employer.contactPhone %>" data-email="<%= employer.contactEmail %>" data-company_reg_no="<%= employer.registrationNumber %>" data-isEmployer ="<%= employer.isEmployer %>" data-isSme="<%= employer.isSme %>" data-isOffTaker="<%= employer.isOffTaker %>" data-toggle="modal" data-target="#edit_employer"><i class="fal fa-edit"></i> Edit Employer</a>
                                
                                        <a class="dropdown-item" href="<%= Routes.customer_path(@conn, :employer_staff, company_id: employer.registrationNumber)%>"><i class="fal fa-users"></i> View Employees</a>
                                        <a class="dropdown-item" href="<%= Routes.customer_path(@conn, :employer_admin, company_id: employer.registrationNumber)%>"><i class="fal fa-user"></i> View Company Administrators</a>

                                      </div>
                                  </div>
                              </div>
                        </td>
                        </tr>
                      <%end %>
                  </tbody>
                </table>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>


<%# --------------- Create Loan Product %>
<div class="modal fade" id="add_employer" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
