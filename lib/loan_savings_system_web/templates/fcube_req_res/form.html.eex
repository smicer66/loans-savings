<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :request_data %>
  <%= text_input f, :request_data %>
  <%= error_tag f, :request_data %>

  <%= label f, :response_data %>
  <%= text_input f, :response_data %>
  <%= error_tag f, :response_data %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
